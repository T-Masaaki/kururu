<p id="notice"><%= notice %></p>

<h1>アイテムの一覧</h1>
<%= link_to 'アイテムの登録', new_item_path, class: "btn add-user-btn" %>


<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Image</th>
      <th>Location</th>
      <th>Name</th>
      <th>Bought date</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.category %></td>
        <td><%= image_tag item.image.url(:thumb) %></td>
        <td><%= item.location %></td>
        <td><%= item.name %></td>
        <td><%= item.bought_date %></td>
        <td><%= item.comment %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
