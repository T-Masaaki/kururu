<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation" class="alert alert_danger">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category %><br>
    <%= f.text_field :category, class: "form-control category-field" %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: "form-control image-field" %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location, class: "form-control location-field" %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control name-field" %>
  </div>
  <div class="field">
    <%= f.label :bought_date %><br>
    <%= f.date_select :bought_date %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_field :comment, class: "form-control comment-field" %>
  </div>
  <div class="actions">
    <%= f.submit "アイテムの登録", class: "btn primary-btn" %>
  </div>
<% end %>
